<resources>
    <!-- Base application theme. -->
    <style name="Theme.PrimaryTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="buttonStyle">@style/Theme.PrimaryTheme.PrimaryButton</item>
        <item name="android:editTextColor">@color/color_gray_dark</item>
        <item name="android:textColorHint">@color/color_gray_dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.PrimaryTheme.PrimaryButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/color_gray_dark</item>
        <item name="android:textSize">@dimen/text_h4</item>
        <item name="android:paddingStart">@dimen/dimen_4</item>
        <item name="android:paddingEnd">@dimen/dimen_4</item>
        <item name="android:paddingTop">@dimen/dimen_6</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:paddingBottom">@dimen/dimen_6</item>

    </style>
</resources>