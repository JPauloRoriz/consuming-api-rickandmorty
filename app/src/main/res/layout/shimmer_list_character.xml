<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_gray_dark">


    <View
        android:id="@+id/view_start"
        android:layout_width="160dp"
        android:layout_height="200dp"
        android:layout_margin="@dimen/dimen_2"
        android:background="@color/shimmer_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_end"
        android:layout_width="160dp"
        android:layout_height="200dp"
        android:background="@color/shimmer_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/view_start"
        app:layout_constraintTop_toTopOf="@+id/view_start" />

    <View
        android:id="@+id/view_bottom_start"
        android:layout_width="160dp"
        android:layout_height="200dp"
        android:layout_margin="@dimen/dimen_2"
        android:background="@color/shimmer_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_start" />

    <View
        android:layout_width="160dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="@+id/view_bottom_start"
        android:background="@color/shimmer_color"
        app:layout_constraintEnd_toEndOf="@+id/view_end"
        app:layout_constraintTop_toBottomOf="@+id/view_start" />


</androidx.constraintlayout.widget.ConstraintLayout>