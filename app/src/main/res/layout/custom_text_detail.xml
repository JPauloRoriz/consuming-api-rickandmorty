        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="@dimen/dimen_3"
        tools:text="@string/tv_specie" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/text_h2"
        app:layout_constraintTop_toTopOf="@id/tv_specie"
        app:layout_constraintStart_toEndOf="@+id/tv_specie"
        android:layout_margin="@dimen/dimen_3"
        app:layout_constraintBottom_toBottomOf="@id/tv_specie"
        tools:text="dddddddddddddd" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="@dimen/text_h2"
        app:layout_constraintTop_toBottomOf="@+id/tv_specie"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="@dimen/dimen_3"
        tools:text="GÃªnero: " />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/text_h2"
        app:layout_constraintTop_toTopOf="@id/tv_gender"
        app:layout_constraintStart_toEndOf="@+id/tv_gender"
        android:layout_margin="@dimen/dimen_3"
        app:layout_constraintBottom_toBottomOf="@id/tv_gender"
        tools:text="dddddddddddddd" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_location"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/text_h2"
        app:layout_constraintTop_toBottomOf="@+id/tv_gender"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="@dimen/dimen_3"
        tools:text="Local: " />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/text_h2"
        app:layout_constraintTop_toTopOf="@id/tv_location"
        app:layout_constraintStart_toEndOf="@+id/tv_location"
        android:layout_margin="@dimen/dimen_3"
        app:layout_constraintBottom_toBottomOf="@id/tv_location"
        tools:text="dddddddddddddd" />


</androidx.constraintlayout.widget.ConstraintLayout>